login("YOUR_AUTH_TOKEN")

import torch
from diffusers import StableDiffusionXLPipeline
from PIL import Image

pipe = StableDiffusionXLPipeline.from_pretrained(
    "stabilityai/stable-diffusion-xl-base-1.0",
    torch_dtype=torch.float16,
    variant="fp16",
    use_safetensors=True
)
pipe.to("cuda")

import ipywidgets as widgets
from IPython.display import display, clear_output

prompt_input = widgets.Text(
    value="A surreal galaxy made of neon colors",
    description='Prompt:',
    layout=widgets.Layout(width='80%'),
    style={'description_width': 'initial'}
)

generate_btn = widgets.Button(description="Generate Image", button_style='success')
output_area = widgets.Output()

def on_generate_clicked(b):
    with output_area:
        clear_output()
        print(f"Generating for prompt: {prompt_input.value}")
        image = pipe(prompt=prompt_input.value, guidance_scale=7.5).images[0]
        display(image)

generate_btn.on_click(on_generate_clicked)
display(prompt_input, generate_btn, output_area)

